{
  // 1. ESLint 配置
  "eslint.nodePath": "./node_modules", // 使用项目内 ESLint
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "javascriptreact",
    "typescriptreact"
  ],
  "eslint.useFlatConfig": true, // 适配扁平配置
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // 2. 格式化与保存行为
  "editor.formatOnSave": false, // 禁用默认格式化
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint":"always" // 保存时自动执行 ESLint 修复（含 Prettier）
  },
  "prettier.requireConfig": true, // 强制使用项目内 Prettier 配置
  "prettier.path": "./node_modules/prettier", // 项目内 Prettier 版本

  // 3. 禁用冲突工具
  "[vue]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
  "[typescript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
  "[javascript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
  "javascript.format.semicolons": "ignore",
  "typescript.format.semicolons": "ignore",
  "editor.autoClosingQuotes": "never",

  // 4. Git 与 Husky 配置
  "git.enableCommitSigning": false,
  "git.useEditorAsCommitInput": false,
  "git.terminalAuthentication": true,
  "commitlint.enable": true,
  "commitlint.configPath": "./commitlint.config.js",
  "npm.packageManager": "pnpm" // 统一包管理器（根据项目实际修改）
}
